<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" style="-fx-padding: 30; -fx-background-color: #89A8B2" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gui.controllers.LoginController">
    <Label text="Hair Salon Management System" style="-fx-font-size: 25px; -fx-padding: 0 20 20 20; -fx-font-weight: bold"/>
    <VBox style = "-fx-background-color: #B3C8CF; -fx-border-radius: 0 0 18 18; -fx-background-radius: 18 18 18 18; -fx-padding: 20 10 20 10; -fx-spacing: 15" alignment="CENTER">
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 0 0 20 0">
            <HBox spacing="10" alignment="CENTER">
                <Label text="Username: " style="-fx-font-size: 18px;"/>
                <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 15px;" maxWidth="150"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Password: " style="-fx-font-size: 18px;"/>
                <PasswordField fx:id="passwordField" promptText="Password"  style="-fx-font-size: 15px;" maxWidth="150"/>
            </HBox>
        </VBox>
        <Button text="Log in" onAction="#handleLogin" style="-fx-font-size: 18px; -fx-cursor: hand" minWidth="100"/>
    </VBox>
</VBox>
