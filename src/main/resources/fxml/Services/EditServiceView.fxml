<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox style="-fx-padding: 30; -fx-background-color: #89A8B2;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gui.controllers.Services.EditServiceController">
    <VBox spacing="20" style="-fx-padding: 15;-fx-background-color: #B3C8CF; -fx-font-size: 15; -fx-border-radius: 0 0 18 18; -fx-background-radius: 18 18 18 18;" alignment="CENTER">
        <Label text="Edit Service" style="-fx-font-size: 20px;"/>
        <TextField fx:id="serviceTypeField" promptText="Type"/>
        <TextField fx:id="priceField" promptText="Price"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Submit" onAction="#handleSave"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</VBox>