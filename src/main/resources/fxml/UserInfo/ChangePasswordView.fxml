<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox style="-fx-padding: 30; -fx-background-color: #89A8B2;" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gui.controllers.UserInfo.ChangePasswordController">
    <VBox spacing="20" style="-fx-padding: 15;-fx-background-color: #B3C8CF; -fx-font-size: 15; -fx-border-radius: 0 0 18 18; -fx-background-radius: 18 18 18 18;" alignment="CENTER">
        <Label text="Change password" style="-fx-font-size: 20px;"/>
        <PasswordField fx:id="currentPasswordField" promptText="Current password"/>
        <PasswordField fx:id="newPasswordField" promptText="New password"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Submit" onAction="#handleChangePassword"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</VBox>
